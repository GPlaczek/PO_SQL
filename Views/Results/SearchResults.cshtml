@using System.Data.SQLite 
@{
    Layout = "_Layout";
    var query = ViewData["query"] as SQLiteDataReader;
}
<div class="content">
    <h1 class="display-4">Wynik przeszukania</h1>
    <table>
   @while(query.Read())
    {
        <tr>
        <td>@query.GetString(0)</td>
        <td>@query.GetString(1)</td>
        <td>@query.GetFloat(2)</td>
        </tr>
    }
        </table>
</div>
