@using System.Data.SQLite
@using PO_SQL.Models.ActionClasses
@using PO_SQL.Models.DatabaseActionClasses 
@{
    ViewData["Title"] = "Usuń produkt";
    IAction a1 = new ListTables();
    var tables = a1.Execute();
    var query = ViewData["query"] as SQLiteDataReader;
}
@using (Html.BeginForm("DeleteProductResult", "DatabaseResults"))
{
<div class="text-center">
    <h1 class="display-4">Usuń produkt</h1>
    <select class="text-center" name="Table" id="dropdowntipo">
        @for (int i = 0; tables.Read(); i++)
        {
            <option value="@tables.GetString(0)" name="TableName">@tables.GetString(0)</option>
        }
    </select>
    <br /><br />
    <select class="text-center" name="Products" id="dropdowntipo">
        @for (int i = 0; query.Read(); i++)
        {
            <option value="@query.GetString(0)" name="ProductName">@query.GetString(0)</option>
        }
    </select>
    <br /><br />
    <input type="text" placeholder="Nazwa" name="Name" /><br /><br />
    <input type="submit" name="Submit" />
</div>
}