@using System.Data.SQLite
@using PO_SQL.Models.ActionClasses
@model PO_SQL.Models.Product
@{  
    Layout = "_Layout";
    ViewBag.Title = "Index";
    ViewData["Title"] = "Modyfikuj produkt";
    var product = (Product)ViewData["Data"];
}
@using (Html.BeginForm("ModifyResult", "DatabaseResults"))
{
<div class="text-center">
    <h1 class="display-4">Modyfikuj wybrany produkt</h1><br />
    <input type="hidden" name="Table" value="@product.Table" />
    <input type="hidden" name="Id" value="@product.Id" />
    <input type="text" value="@product.Name" name="Name" /><br /><br />
    <input type="text" value="@product.Description" name="Desc" /><br /><br />
    <input type="text" value="@Math.Round(product.Price,2)"  name="Price"/><br /><br />
    <input type="submit" name="Submit" value="Modyfikuj"/>
</div>
}
